@using System.Security.Claims
@{
    Layout = "_Layout";

    ViewBag.defaultAvatarUrl = "/images/profile-user.png";

    // Для представлений, в которых моделью выступают TextField и Article,
    // вынесена общая логика
    // Todo: возможно, такое вынесение - не лучший вариант из-за
    // неочевидности мастер-страницы в контроллерах и представлениях.
    // С другой стороны, не придется менять в разных местах нестрого типизированные
    // свойства
    if (Model is TextField || Model is Article)
    {
        ViewBag.MetaTitle = Model.Title;
        ViewBag.MetaKeywords = Model.MetaKeywords;
        ViewBag.MetaDescription = Model.MetaDescription;
    }
}
