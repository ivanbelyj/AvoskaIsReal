<!DOCTYPE html>

<html lang="ru">
<head>
    @{
        await Html.RenderPartialAsync("_MetatagsPartial");
    }
    @* Базовые скрипты могут быть использованы в коде,
        сгенерированном в RenderBody()
    *@
    @{
        await Html.RenderPartialAsync("_ScriptsPartial");
    }  
</head>
<body class="body">
    @if (IsSectionDefined("Header"))
    {
        @RenderSection("Header")
    }
    else
    {
        string burgerClass = ViewBag?.isHeaderGray != null ? "burger_gray" : "burger_brown-dark";
        string logoClass = ViewBag?.isHeaderGray != null ? "gray-color" : "brown-dark-color";
        <header class="header header_horizontal padding-horizontal nav-panel__button">
            <div class="burger nav-panel__burger header_horizontal__burger @burgerClass">
                <div class="burger__line burger__top"></div>
                <div class="burger__line burger__middle"></div>
                <div class="burger__line burger__bottom"></div>
            </div>
            <div class="logo header__logo header_horizontal__logo @logoClass">
                авоська существует
            </div>
        </header>
    }
    @{
        await Html.RenderPartialAsync("_NavPartial");
    }

    <div>
        @RenderBody()
    </div>
    @{
        await Html.RenderPartialAsync("_FooterPartial");
    }
  
</body>
</html>
